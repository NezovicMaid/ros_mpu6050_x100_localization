<launch>
    <arg name="use_rviz" default="true" />
    <arg name="serial_port" default="/dev/ttyUSB0" />

       <node pkg="rosserial_python" type="serial_node.py" name="arduino_serial_node" output="screen">
        <param name="port" value="$(arg serial_port)" />
        <param name="baud" value="57600" /> <!-- Provjeri da li je ovo ista brzina kao u Arduino kodu -->
    </node>


    <node pkg="x100_localization" type="imu_converter" name="imu_converter_node" output="screen" />

  
    <node pkg="laser_scan_matcher" type="laser_scan_matcher_node" name="laser_scan_matcher_node" output="screen">
        <param name="fixed_frame" value="odom"/>
        <param name="base_frame" value="base_link"/>
        <param name="use_imu" value="true"/>
        <param name="use_odom" value="false"/> <!-- Isključeno kao u tvom izvještaju -->
        <param name="publish_tf" value="true"/>
        <param name="publish_pose" value="true"/>
        <!-- Remapujemo /imu/data temu da laser_scan_matcher sluša naš konverter -->
        <remap from="imu/data" to="/imu/data"/>
    </node>

  
    <group if="$(arg use_rviz)">
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find x100_localization)/config/demo.rviz" />
    </group>

</launch>